<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<!-- Scrollable content -->
	<ScrollView
		android:id="@+id/vscroll_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">

		<LinearLayout
			android:id="@+id/linear_main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingHorizontal="8dp">

			<!-- Result Switch Buttons -->
			<LinearLayout
				android:id="@+id/linear_switch_result_tab"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<!-- Real check button -->
				<LinearLayout
					android:id="@+id/linear_real_check_tab"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:background="#323957"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">

					<TextView
						android:id="@+id/textview_real_check_tab"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Real Result"
						android:textSize="14sp"
						android:textColor="#FFFFFF"/>

					<LinearLayout
						android:id="@+id/linear_indicator_real_check_tab"
						android:layout_width="match_parent"
						android:layout_height="4dp"
						android:layout_marginTop="3dp"
						android:background="#FFFFFF"
						android:orientation="horizontal"
						android:padding="8dp" />
				</LinearLayout>

				<!-- Space between switch result buttons -->
				<View
					android:id="@+id/view_gap"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:layout_weight="1"/>

				<!-- Fake check button -->
				<LinearLayout
					android:id="@+id/linear_fake_check_tab"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:background="#323957"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">

					<TextView
						android:id="@+id/textview_fake_check_tab"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Fake Result"
						android:textSize="14sp"
						android:textColor="#FFFFFF"/>

					<LinearLayout
						android:id="@+id/linear_indicator_fake_check_tab"
						android:layout_width="match_parent"
						android:layout_height="3dp"
						android:layout_marginTop="3dp"
						android:padding="8dp"
						android:background="#FFFFFF"
						android:orientation="horizontal"/>
				</LinearLayout>
			</LinearLayout>

			<!-- Include your result view here -->
			<include
				layout="@layout/result_view_single"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="-100dp"/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
