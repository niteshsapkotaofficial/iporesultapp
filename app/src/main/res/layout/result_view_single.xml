<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical">

    <!-- Result view single -->
    <LinearLayout
        android:id="@+id/linear_result_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#222945"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_result_single_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#333A56"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageview_result_single_logo"
                android:layout_width="175dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ipo_result_logo"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/textview_result_single_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="25dp"
                android:text="Fun Results By IPO Result App"
                android:textSize="14sp"
                android:textColor="#FFFFFF"/>
            <!-- Select company spinner -->
            <LinearLayout
                android:id="@+id/linear_result_single_select_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">
                <Spinner
                    android:id="@+id/spinner_result_single_select_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dialog"/>
            </LinearLayout>
            <!-- Select company placement -->
            <LinearLayout
                android:id="@+id/linear_result_single_select_company_placement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <TextView
                    android:id="@+id/textview_result_single_select_company_placement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:text="Loading Companies..."
                    android:singleLine="true"/>
            </LinearLayout>
            <!-- Enter boid edittext -->
            <LinearLayout
                android:id="@+id/linear_result_single_enter_boid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="6dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|center_vertical">
                <EditText
                    android:id="@+id/edittext_result_single_boid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:hint="16-digit BOID"
                    android:maxLength="16"
                    android:textColorHint="@color/edittext_hint"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:imeOptions="actionDone"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textview_result_single_boid_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="0/16"
                    android:textSize="14sp"
                    android:textColor="@color/edittext_hint"/>
            </LinearLayout>
            <Button
                android:id="@+id/button_result_single_view_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:background="#4F5B8B"
                android:text="View Result"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"/>
            <TextView
                android:id="@+id/textview_result_single_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Result Here"
                android:textSize="16sp"
                android:textColor="#FDD835"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/textview_result_single_selected_company"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="selected_company"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>