
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/vscroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/linear_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:fillViewport="true">
            <LinearLayout
                android:id="@+id/linear_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#333A56"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">
                <LinearLayout
                    android:id="@+id/linear_enter_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <EditText
                        android:id="@+id/edittext_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:textColor="#383F66"
                        android:hint="Enter Name"
                        android:maxLength="30"
                        android:textColorHint="#607D8B"
                        android:singleLine="true"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_enter_boid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <EditText
                        android:id="@+id/edittext_boid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:textColor="#383F66"
                        android:hint="16-digit BOID"
                        android:maxLength="16"
                        android:textColorHint="#9E9E9E"
                        android:singleLine="true"
                        android:inputType="phone"
                        android:imeOptions="actionDone"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/textview_boid_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="0/16"
                        android:textSize="14sp"
                        android:textColor="#9E9E9E"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_gravity="center_horizontal|center_vertical">
                    <Button
                        android:id="@+id/button_save_boid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:text="Save Boid"
                        android:textSize="16sp"
                        android:textAllCaps="false"
                        android:textColor="#383F66"
                        android:layout_weight="2"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/textview_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_icon_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#555B7B"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:translationY="-340.0dp"
                android:layout_gravity="center_horizontal|center_vertical">
                <ImageView
                    android:id="@+id/imageview_icon_plus"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/add_boid"
                    android:scaleType="fitCenter"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
