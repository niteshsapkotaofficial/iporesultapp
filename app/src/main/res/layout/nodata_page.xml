<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_nodata_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageview_illustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/il_empty"/>
    <TextView
        android:id="@+id/textview_nodata_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Oops! Nothing's Here"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textview_nodata_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        android:text="Please add some content to see it here"
        android:textColor="@color/white"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/button_nodata_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Reload Data"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@color/colorPrimaryLight"
        android:clickable="true"/>

</LinearLayout>