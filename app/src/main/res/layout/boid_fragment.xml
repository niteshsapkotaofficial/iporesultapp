
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/vscroll_main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@android:color/transparent"
		android:layout_gravity="center_horizontal|center_vertical"
		android:fillViewport="true">
		<LinearLayout
			android:id="@+id/linear_main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="24dp"
			android:paddingTop="8dp"
			android:paddingRight="24dp"
			android:paddingBottom="8dp"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical"
			android:layout_weight="1"
			android:fillViewport="true">
			<!-- Safety Prompt Here -->
			<include layout="@layout/safety_prompt"/>
			<LinearLayout
				android:id="@+id/linear_save_detail_dialog"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="#333A56"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:layout_gravity="center_horizontal|center_vertical">
				<ImageView
					android:id="@+id/imageview_app_banner"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="75dp"
					android:layout_marginRight="75dp"
					android:src="@drawable/ipo_result_logo"
					android:scaleType="centerCrop"/>
				<LinearLayout
					android:id="@+id/linear_select_capital"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="6dp"
					android:layout_marginTop="20dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal|center_vertical">
					<ImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:src="@drawable/ic_capital"
                        app:tint="@color/colorControlHighlight" />
					<Spinner
						android:id="@+id/spinner_capital"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@android:color/transparent"
						android:spinnerMode="dropdown"
						android:layout_weight="1"/>
					<TextView
						android:id="@+id/textview_capital_loading"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Capitals Loading..."
						android:textSize="16sp"
						android:textColor="#000000"
						android:singleLine="true"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/imageview_search_capital"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/search"
                        app:tint="@color/colorControlHighlight"
						android:clickable="true"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_enter_username"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:padding="6dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical">
					<ImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:src="@drawable/ic_user"
						app:tint="@color/colorControlHighlight" />
					<EditText
						android:id="@+id/edittext_username"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:text="01193848"
						android:textSize="16sp"
						android:textColor="#383F66"
						android:hint="Username"
						android:textColorHint="@color/edittext_hint"
						android:singleLine="true"
						android:maxLength="8"
						android:inputType="number"
						android:imeOptions="actionNext"
						android:layout_weight="1"/>
					<TextView
						android:id="@+id/textview_username_count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="0/8"
						android:textSize="14sp"
						android:textColor="@color/edittext_hint"/>

				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_enter_password"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:padding="6dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical">
					<ImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:src="@drawable/ic_key_white"
						app:tint="@color/colorControlHighlight" />
					<EditText
						android:id="@+id/edittext_password"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:text="Niruna@1"
						android:textSize="16sp"
						android:textColor="#383F66"
						android:hint="Password"
						android:textColorHint="@color/edittext_hint"
						android:singleLine="true"
						android:inputType="textPassword"
						android:imeOptions="actionDone"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/imageview_show_password"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:padding="2dp"
						android:src="@drawable/ic_show_password"
						app:tint="@color/colorControlHighlight"
						android:clickable="true"
						android:focusable="true"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear_select_bank"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="6dp"
					android:layout_marginTop="20dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:layout_gravity="center_horizontal|center_vertical">
					<ImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:src="@drawable/ic_capital"
						app:tint="@color/colorControlHighlight" />
					<Spinner
						android:id="@+id/spinner_bank"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@android:color/transparent"
						android:spinnerMode="dropdown"
						android:layout_weight="1" />
					<ImageView
						android:id="@+id/imageview_bank_search"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/search"
						app:tint="@color/colorControlHighlight"
						android:clickable="true"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_enter_crn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:padding="6dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical">
					<ImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:src="@drawable/ic_key_white"
						app:tint="@color/colorControlHighlight" />
					<EditText
						android:id="@+id/edittext_crn"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:text="1234"
						android:textSize="16sp"
						android:textColor="#383F66"
						android:hint="CRN Number"
						android:textColorHint="@color/edittext_hint"
						android:singleLine="true"
						android:inputType="textPassword"
						android:imeOptions="actionNext"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/imageview_show_crn"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:padding="2dp"
						android:src="@drawable/ic_show_password"
						app:tint="@color/colorControlHighlight"
						android:clickable="true"
						android:focusable="true"/>

				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_enter_txnpin"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:padding="6dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical">
					<ImageView
						android:layout_width="12dp"
						android:layout_height="12dp"
						android:layout_marginStart="5dp"
						android:layout_marginEnd="5dp"
						android:src="@drawable/ic_pin_white"
						app:tint="@color/colorControlHighlight" />
					<EditText
						android:id="@+id/edittext_txn_pin"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:background="@android:color/transparent"
						android:text="1234"
						android:textSize="16sp"
						android:textColor="#383F66"
						android:hint="Transaction Pin"
						android:textColorHint="@color/edittext_hint"
						android:singleLine="true"
						android:maxLength="4"
						android:inputType="textPassword"
						android:imeOptions="actionDone"
						android:layout_weight="1"/>
					<ImageView
						android:id="@+id/imageview_show_txnpin"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:padding="2dp"
						android:src="@drawable/ic_show_password"
						app:tint="@color/colorControlHighlight"
						android:clickable="true"
						android:focusable="true"/>
				</LinearLayout>

				<LinearLayout
					android:id="@+id/linear_button_login"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="20dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:weightSum="3"
					android:layout_gravity="center_horizontal|center_vertical">
					<Button
						android:id="@+id/button_login"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="#FFFFFF"
						android:text="Continue"
						android:textSize="16sp"
						android:textColor="#383F66"
						android:layout_weight="2"/>
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:id="@+id/textview_temp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Test"
				android:textSize="10dp"
				android:textColor="@color/white"/>

		</LinearLayout>
	</ScrollView>
</LinearLayout>
